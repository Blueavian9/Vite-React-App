{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./src"]
  },
  "include": [
    "src/**/*.ts", 
    "src/**/*.tsx", 
    "vite-env.d.ts"
  ]
}
